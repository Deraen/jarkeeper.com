@import "normalize.css"
@import "foundation.min.css"


header

 & h2
   font-size: 1.3em;


span.version
  font-weight: normal;
  font-size: 0.4em;
  margin-left: 20px;

section.summary
  & ul
    & li
      list-style: none;
      display: inline-block;
    & span
      vertical-align: middle;

span.number
  margin-left: 10px;
  margin-right: 10px;

span.status
  width: 16px;
  height: 16px;
  display: inline-block;
  border-radius: 2px;
  &.up-to-date
    background-color: green;
  &.out-of-date
    background-color: red;

table
  & th
    text-transform: uppercase;
  & td.status-column
    text-align: center;
